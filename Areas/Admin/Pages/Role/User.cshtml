
@page "/Admin/Role/users/"
@model DACS_DAMH.Areas.Admin.Pages.Role.UserModel


<h2>Danh sách người dùng</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<table class="table table-striped">
    <tr>
        <th>Tên người dùng</th>
        <th>Các quyền</th>
        <th>Tác vụ</th>
    </tr>
    @foreach (var user in @Model.users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.listroles</td>
            <td>
                <form method="POST" class="d-inline">
                    <button name="Input.ID" value="@user.Id" class="btn btn-success btn-sm"
                        asp-page="./AddUserRole">Cập nhật quyền</button>
                </form>
                <a class="btn btn-primary btn-sm" asp-page="./ForgotPassword" asp-route-id="@user.Id">Đặt lại mật khẩu</a>
                @* <form method="POST" class="d-inline">
                    <button name="Input.ID" value="@user.Id" class="btn btn-primary btn-sm"
                            asp-page="./SetPassword">
                        Đặt lại mật khẩu
                    </button>
                </form> *@
            </td>
        </tr>
        
    }
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
