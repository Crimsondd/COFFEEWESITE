@model IEnumerable<DACS_DAMH.Models.Discount>

@{
    ViewData["Title"] = "Index";

}

<h2>Danh sách mã khuyến mãi</h2>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Add">Tạo mới</a>
</p> 
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Mã Giảm</th>
            <th>Giảm giá( %)</th>
            <th>Thời hạn</th>
            <th>Số lượng</th>
            <th>Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDiscount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Percentage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Expdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remain)
                </td>
                <td>
                    <a class="btn btn-success btn-sm" asp-action="Update" asp-route-id="@item.IdDiscount">Cập nhật</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdDiscount">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
