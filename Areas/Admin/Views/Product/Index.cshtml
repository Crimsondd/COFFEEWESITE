
@model IEnumerable<DACS_DAMH.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<h2>List Of Products</h2>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Add">Create New</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Cate</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C", new CultureInfo("vi-VN"))</td>
                <td>@product.Description</td>
                <td>@Html.DisplayFor(modelItem => product.Category.Name) </td>
                <td><img src="@product.ImageUrl" alt="Product Image" class="img-fluid" style="max-width:200px;" id="previewImage" /></td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@product.Id">Details</a>
                    <a class="btn btn-success btn-sm" asp-action="Update" asp-route-id="@product.Id">Update</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
        