@model List<Order>


@{
    Layout = "_Layout2";
}

<h2 style="text-align: center;">Lịch sử đơn hàng</h2>
<br />
@if (Model.Count == 0)
{
    <p>Không có đơn hàng nào.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Ngày đặt hàng</th>
                <th>Tổng tiền</th>
                <th>Thông tin đơn hàng</th>
                <th>Địa chỉ nhận hàng và số điện thoại người nhận</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.TotalPrice.ToString("#,0 đ")</td>
                    <td>
                        
                        @foreach (var orderDetail in order.OrderDetails)
                        {
                            <li>@orderDetail.Product.Name - Size: @orderDetail.size.Name - Topping: @orderDetail.topping.Name - SL: @orderDetail.Quantity - Giá: @orderDetail.Price.ToString("#,0 đ") </li>
                        }
                        
                    </td>
                    <td>
                        <li>
                            @order.ShippingAddress
                        </li>
                        <li>
                            Sdt: @order.Numberphone
                        </li>
                        
                    </td>
                    <td>@order.Notes</td>
                </tr>
            }
        </tbody>
    </table>
}
