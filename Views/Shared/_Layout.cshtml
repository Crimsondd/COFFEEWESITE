    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () {
            loadData();
            function loadData() {
                $.ajax({
                    url: '@Url.Action("IndexAJAX", "ShoppingCart")',
                    type: 'GET',
                    success: function (data) {
                        if (data && data.success && data.data) {
                            $("#badge-cart").html(data.data);
                        }
                    },

                });
            }
            $('.add-to-cart-btn').click(function (e) {
                e.preventDefault();
                var productId = $(this).siblings('.Id-input').val();
                var quantity = $(this).siblings('.quantity-input').val();
                $.ajax({
                    url: '@Url.Action("AddToCart", "ShoppingCart")',
                    type: 'POST',
                    data: { productId: productId, quantity: 1, updatedPrice: 0, sizeId: 2, toppingId: 4 },
                    success: function (data) {
                        if (data && data.success && data.data) {
                            $("#badge-cart").html(data.data);
                        }
                        Swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Sản phẩm đã được thêm vào giỏ hàng.",
                            showConfirmButton: false,
                            timer: 1500,

                        });
                    },
                    error: function () {
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Vui lòng đăng nhập để tiếp tục!",
                            heightAuto: true

                        });
                    }

                });
            });
        });
    </script>
